import os
import socket
import sys

def status_update():
    relay_socket = sys.argv[1]
    if not os.path.exists(relay_socket):
        sys.exit(1)
    id, status = sys.argv[2:4]
    s = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
    s.connect(relay_socket)
    s.send("%s %s\n" % (id, status))
    s.close()

if __name__ == '__main__':
    status_update()

